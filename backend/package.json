{
  "name": "backend",
  "version": "2.0.1",
  "description": "API",
  "author": "Damien Suhard<ptitdam2001@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "populate:dev": "npx ts-node src/script-db.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.3",
    "@nestjs/core": "^7.0.3",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/platform-express": "^7.0.3",
    "@nestjs/platform-socket.io": "^7.0.3",
    "@nestjs/swagger": "^4.0.9",
    "@nestjs/websockets": "^7.0.3",
    "config": "^3.3.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.1",
    "mongoose-paginate-v2": "^1.3.52",
    "mongoose-plugin-autoinc": "^1.1.9",
    "multer": "^1.4.2",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.1",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.1",
    "@nestjs/testing": "^7.4.2",
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.160",
    "@types/mongoose": "^5.7.36",
    "@types/mongoose-paginate": "^5.0.8",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.6.0",
    "@types/socket.io": "^2.1.11",
    "@types/supertest": "^2.0.10",
    "jest": "^26.4.2",
    "jst": "^0.0.13",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
